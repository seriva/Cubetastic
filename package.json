{
  "name": "gdjs",
  "version": "0.0.1",
  "description": "Genesis Device JS",
  "watch": {
    "build": "src/**/*.js"
  },
  "scripts": {
    "start": "npm run build && parallelshell \"npm run server\" \"npm-watch\"",
    "server": "cd dist && reload -b -v",
    "build": "npm run transpile && npm run bundle",
    "bundle": "webpack",
    "transpile": "babel -d build src",
    "lint": "eslint src"
  },
  "author": "Luuk van Venrooij",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^3.13.1",
    "eslint-plugin-react": "^6.9.0",
    "npm-watch": "^0.1.6",
    "parallelshell": "^2.0.0",
    "reload": "^1.0.2",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "core-js": "^2.4.1",
    "gl-matrix": "^2.3.2"
  }
}
